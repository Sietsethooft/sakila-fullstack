<section class="client-card">
    <script src="/js/clientCreate.js"></script>

    <h2 class="mb-4">Klant aanmaken</h2>

    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
        <div class="alert alert-danger">
            <ul>
                <% errors.forEach(function(error) { %>
                    <li><%= error %></li>
                <% }); %>
            </ul>
        </div>
    <% } %>

    <form id="create-client-form" action="/clientManagement/create" method="POST" novalidate>
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="first_name" class="form-label">Firstname *</label>
                <input type="text" class="form-control input-field-focus" id="first_name" name="first_name" required>
                <div class="invalid-feedback">Firstname is required.</div>
            </div>
            <div class="col-md-6">
                <label for="last_name" class="form-label">Lastname *</label>
                <input type="text" class="form-control input-field-focus" id="last_name" name="last_name" required>
                <div class="invalid-feedback">Lastname is required.</div>
            </div>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">E-mail *</label>
            <input type="email" class="form-control input-field-focus" id="email" name="email" required>
            <div class="invalid-feedback">Please enter a valid email address.</div>
        </div>
        <div class="mb-3">
            <label for="address" class="form-label">Address *</label>
            <input type="text" class="form-control input-field-focus" id="address" name="address" required>
            <div class="invalid-feedback">Address is required.</div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="city" class="form-label">City *</label>
                <input type="text" class="form-control input-field-focus" id="city" name="city" required>
                <div class="invalid-feedback">City is required.</div>
            </div>
            <div class="col-md-6">
                <label for="district" class="form-label">District *</label>
                <input type="text" class="form-control input-field-focus" id="district" name="district" required>
                <div class="invalid-feedback">District is required.</div>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="country" class="form-label">Country *</label>
                <input type="text" class="form-control input-field-focus" id="country" name="country" required>
                <div class="invalid-feedback">Country is required.</div>
            </div>
            <div class="col-md-6">
                <label for="postal_code" class="form-label">Postal Code</label>
                <input type="text" class="form-control input-field-focus" id="postal_code" name="postal_code">
            </div>
        </div>
        <div class="mb-3">
            <label for="phone" class="form-label">Phone Number *</label>
            <input type="tel" class="form-control input-field-focus" id="phone" name="phone" required pattern="^(\+?\d{1,3}[- ]?)?\d{10}$">
            <div class="invalid-feedback">Please enter a valid phone number (10 digits, optional country code).</div>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</section>