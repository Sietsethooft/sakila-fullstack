<section class="client-card">
    <!-- Load all javascripts from public/javascript-->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
    window.clientError = '<%= error ? error : '' %>';
    window.clientSuccess = '<%= success ? success : '' %>';
    </script>
    <script src="/javascripts/clientScripts/clientDetail.js"></script>
    <script src="/javascripts/clientScripts/clientAlerts.js"></script>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><%= data.client.name %></h2>
        <div class="mb-1">
            <a href="/rentalManagement/create?email=<%= encodeURIComponent(data.client.email) %>" class="btn btn-primary-sm me-2">
                <i class="fas fa-plus"></i> New Rental
            </a>
            <a href="/clientManagement/<%= data.client.customer_id %>/edit" class="btn btn-warning me-2">
                <i class="fas fa-edit"></i> Edit
            </a>
            <form id="delete-client-form" action="/clientManagement/<%= data.client.customer_id %>/delete" method="POST" style="display:inline;">
                <button type="button" class="btn btn-danger" id="delete-client-btn">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
            </form>           
        </div>
    </div>

<div class="row mb-4">
    <div class="col-md-6">
        <table class="table table-bordered">
            <tr>
                <th>E-mail</th>
                <td><%= data.client.email %></td>
            </tr>
            <tr>
                <th>Phone number</th>
                <td><%= data.client.phone %></td>
            </tr>
            <tr>
                <th>Created at</th>
                <td><%= data.client.created_at %></td>
            </tr>
            <tr>
                <th>Last updated</th>
                <td><%= data.client.updated_at %></td>
            </tr>
        </table>
    </div>
    <div class="col-md-6">
        <table class="table table-bordered">
            <tr>
                <th>Address</th>
                <td><%= data.client.address %></td>
            </tr>
            <tr>
                <th>Postal Code</th>
                <td><%= data.client.postal_code %></td>
            </tr>
            <tr>
                <th>Active</th>
                <td><%= data.client.active %></td>
            </tr>
        </table>
    </div>
</div>

    <h3 class="d-flex justify-content-between align-items-center">
        Outstanding Rentals
    </h3>
    <table class="table-800 table table-bordered">
        <colgroup>
            <col style="width: 40%;">
            <col style="width: 20%;">
            <col style="width: 20%;">
            <col style="width: 10%;">
            <col style="width: 10%;">
        <thead>
            <tr>
                <th>Film</th>
                <th>Hired on</th>
                <th>Return by</th>
                <th>Price</th>
                <th class="text-center">Returned?</th>
            </tr>
        </thead>
        <tbody>
            <% if (activeRentals && activeRentals.length > 0) { %>
                <% activeRentals.forEach(rental => { %>
                    <tr>
                        <td><%= rental.title %></td>
                        <td><%= rental.hired_on %></td>
                        <td><%= rental.return_by %></td>
                        <td><%= rental.price %></td>
                        <td class="text-center">
                            <button
                                type="button"
                                class="btn btn-sm btn-outline-success return-rental"
                                style="width:80%;"
                                data-id="<%= rental.rental_id %>"
                                title="Mark rental as returned"
                                aria-label="Mark rental as returned"
                            >âœ“</button>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="4" class="text-center">No outstanding rentals found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <h3>Rental History</h3>
    <table class="table-800 table table-bordered">
        <colgroup>
            <col style="width: 40%;">
            <col style="width: 20%;">
            <col style="width: 20%;">
            <col style="width: 10%;">
        </colgroup>
        <thead>
            <tr>
                <th>Film</th>
                <th>Hired on</th>
                <th>Returned on</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            <% if (rentals && rentals.length > 0) { %>
                <% rentals.forEach(rental => { %>
                    <tr>
                        <td><%= rental.title %></td>
                        <td><%= rental.hired_on %></td>
                        <td><%= rental.returned_on %></td>
                        <td><%= rental.price %></td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="4" class="text-center">No rental history found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</section>

<form id="close-rental-form" method="POST" style="display:none;">
    <input type="hidden" name="clientId" value="<%= data.client.customer_id %>"> <!-- Hidden input to pass client ID -->
</form>