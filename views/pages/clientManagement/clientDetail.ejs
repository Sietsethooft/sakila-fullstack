<section class="client-card">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><%= data.client.klantnaam %></h2>
        <div class="mb-1">
            <a href="/clientManagement/<%= data.client.id %>/edit" class="btn btn-warning me-2">
                <i class="fas fa-edit"></i> Bewerken
            </a>
            <form action="/clientManagement/<%= data.client.id %>/delete" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Weet je zeker dat je deze klant wilt verwijderen?');">
                    <i class="fas fa-trash-alt"></i> Verwijderen
                </button>
            </form>
        </div>
    </div>

    <table class="table-800 table table-bordered">
        <colgroup>
            <col style="width:25%">
            <col style="width:75%">
        </colgroup>
        <tr>
            <th>Email</th>
            <td><%= data.client.email %></td>
        </tr>
        <tr>
            <th>Actief</th>
            <td><%= data.client.actief %></td>
        </tr>
        <tr>
            <th>Adres</th>
            <td><%= data.client.adres %></td>
        </tr>
        <tr>
            <th>Aangemaakt op</th>
            <td><%= data.client.aangemaakt_op %></td>
        </tr>
        <tr>
            <th>Laatste update</th>
            <td><%= data.client.laatste_update %></td>
        </tr>
    </table>

    <h3>Openstaande Verhuren</h3>
    <table class="table-800 table table-bordered">
        <thead>
            <tr>
                <th>Film</th>
                <th>Verhuurd op</th>
                <th>Te retourneren voor</th>
                <th>Prijs</th>
            </tr>
        </thead>
        <tbody>
            <% if (activeRentals && activeRentals.length > 0) { %>
                <% activeRentals.forEach(rental => { %>
                    <tr>
                        <td><%= rental.film %></td>
                        <td><%= rental.verhuurd_op %></td>
                        <td><%= rental.te_retourneren_voor %></td>
                        <td><%= rental.prijs %></td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="4" class="text-center">Geen openstaande verhuren gevonden.</td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <h3>Verhuurgeschiedenis</h3>
    <table class="table-800 table table-bordered">
        <thead>
            <tr>
                <th>Film</th>
                <th>Verhuurd op</th>
                <th>Teruggebracht op</th>
                <th>Prijs</th>
            </tr>
        </thead>
        <tbody>
            <% if (rentals && rentals.length > 0) { %>
                <% rentals.forEach(rental => { %>
                    <tr>
                        <td><%= rental.film %></td>
                        <td><%= rental.verhuurd_op %></td>
                        <td><%= rental.teruggebracht_op %></td>
                        <td><%= rental.prijs %></td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="4" class="text-center">Geen verhuurgeschiedenis gevonden.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</section>

<% if (error) { %>
<script>
    setTimeout(function() {
        alert("<%= error %>");
    }, 250);
</script>
<% } %>