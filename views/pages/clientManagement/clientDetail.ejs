<section class="client-card">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><%= data.client.klantnaam %></h2>
        <div>
            <a href="/clientManagement/<%= data.client.id %>/edit" class="btn btn-warning me-2">
                <i class="fas fa-edit"></i> Bewerken
            </a>
            <form action="/clientManagement" class="display-inline" method="POST">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Weet je zeker dat je deze klant wilt verwijderen?');">
                    <i class="fas fa-trash-alt"></i> Verwijderen
                </button>
            </form>
        </div>
    </div>

