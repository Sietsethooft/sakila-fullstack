<section class="client-card">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><%= data.client.name %></h2>
        <div class="mb-1">
            <a href="/clientManagement/<%= data.client.customer_id %>/edit" class="btn btn-warning me-2">
                <i class="fas fa-edit"></i> Bewerken
            </a>
            <form action="/clientManagement/<%= data.client.customer_id %>/delete" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Weet je zeker dat je deze klant wilt verwijderen?');">
                    <i class="fas fa-trash-alt"></i> Verwijderen
                </button>
            </form>
        </div>
    </div>

<div class="row mb-4">
    <div class="col-md-6">
        <table class="table table-bordered">
            <tr>
                <th>Email</th>
                <td><%= data.client.email %></td>
            </tr>
            <tr>
                <th>Telefoonnummer</th>
                <td><%= data.client.phone %></td>
            </tr>
            <tr>
                <th>Aangemaakt op</th>
                <td><%= data.client.created_at %></td>
            </tr>
            <tr>
                <th>Laatste update</th>
                <td><%= data.client.updated_at %></td>
            </tr>
        </table>
    </div>
    <div class="col-md-6">
        <table class="table table-bordered">
            <tr>
                <th>Adres</th>
                <td><%= data.client.address %></td>
            </tr>
            <tr>
                <th>Postcode</th>
                <td><%= data.client.postal_code %></td>
            </tr>
            <tr>
                <th>Actief</th>
                <td><%= data.client.active %></td>
            </tr>
        </table>
    </div>
</div>
<!-- ...rest van je code... -->

    <h3>Openstaande Verhuren</h3>
    <table class="table-800 table table-bordered">
        <thead>
            <tr>
                <th>Film</th>
                <th>Verhuurd op</th>
                <th>Te retourneren voor</th>
                <th>Prijs</th>
            </tr>
        </thead>
        <tbody>
            <% if (activeRentals && activeRentals.length > 0) { %>
                <% activeRentals.forEach(rental => { %>
                    <tr>
                        <td><%= rental.title %></td>
                        <td><%= rental.hired_on %></td>
                        <td><%= rental.return_by %></td>
                        <td><%= rental.price %></td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="4" class="text-center">Geen openstaande verhuren gevonden.</td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <h3>Verhuurgeschiedenis</h3>
    <table class="table-800 table table-bordered">
        <thead>
            <tr>
                <th>Film</th>
                <th>Verhuurd op</th>
                <th>Teruggebracht op</th>
                <th>Prijs</th>
            </tr>
        </thead>
        <tbody>
            <% if (rentals && rentals.length > 0) { %>
                <% rentals.forEach(rental => { %>
                    <tr>
                        <td><%= rental.title %></td>
                        <td><%= rental.hired_on %></td>
                        <td><%= rental.returned_on %></td>
                        <td><%= rental.price %></td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="4" class="text-center">Geen verhuurgeschiedenis gevonden.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</section>

<% if (error) { %>
<script>
    setTimeout(function() {
        alert("<%= error %>");
    }, 250);
</script>
<% } %>