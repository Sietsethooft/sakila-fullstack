<section class="client-card">
    <div class="d-flex justify-content-between align-items-center">
        <h2><%= movie.title %></h2>
        <div class="mb-1">
            <a href="/clientManagement//edit" class="btn btn-warning me-2">
                <i class="fas fa-edit"></i> Bewerken
            </a>
            <form id="delete-client-form" action="/clientManagement//delete" method="POST" style="display:inline;">
                <button type="button" class="btn btn-danger" id="delete-client-btn">
                    <i class="fas fa-trash-alt"></i> Verwijderen
                </button>
            </form>           
        </div>
    </div>

<p style="max-width: 80%"><em><%= movie.description %></em></p>

  <div class="row mb-4">
    <div class="col-md-6">
        <table class="table table-bordered">
        <colgroup>
            <col style="width:35%">
            <col style="width:65%">
        </colgroup>
        <tr>
            <th>Categorie</th>
            <td><%= movie.category_name %></td>
        </tr>
        <tr>
            <th>Taal</th>
            <td><%= movie.language_name %></td>
        </tr>
        <% if (movie.release_year) { %>
        <tr>
            <th>Jaar</th>
            <td><%= movie.release_year %></td>
        </tr>
        <% } %>
        <% if (movie.length) { %>
        <tr>
            <th>Duur</th>
            <td><%= movie.length %> minuten</td>
        </tr>
        <% } %>
        <tr>
            <th>Rating</th>
            <td><%= movie.rating %></td>
        </tr>
        <tr>
            <th>Laatste update</th>
            <td><%= movie.last_update %></td>
        </tr>
        </table>

        <table class="table table-bordered">
        <colgroup>
            <col style="width:35%">
            <col style="width:65%">
        </colgroup>
        <tr>
            <th>Verhuurprijs</th>
            <td>€ <%= movie.rental_rate %></td>
        </tr>
        <tr>
            <th>Beschikbaar</th>
            <td><%= movie.total_available %> van <%= movie.total_inventory %></td>
        </tr>
        </table>
    </div>
    <div class="col-md-4 <%= (movie.length || movie.release_year) ? 'mt-3' : '' %> align-items-center justify-content-center">
        <img src="https://picsum.photos/480/320?random=1" class="img-fluid rounded shadow movie-img-large" alt="The Matrix">
    </div>
  </div>

<h3>Openstaande Verhuren</h3>
<table class="table-800 table table-bordered">
  <thead>
    <tr>
      <th>Klant</th>
      <th>Verhuurd op</th>
      <th>Te retourneren voor</th>
      <th>Prijs</th>
    </tr>
  </thead>
  <tbody>
    <% if (activeRentals && activeRentals.length > 0) { %>
      <% activeRentals.forEach(function(rental) { %>
        <tr>
          <td><%= rental.customer_name %></td>
          <td><%= rental.rental_date %></td>
          <td><%= rental.return_by %></td>
          <td>€ <%= rental.amount %></td>
        </tr>
      <% }); %>
    <% } else { %>
      <tr>
        <td colspan="4" class="text-center">Geen openstaande verhuren</td>
      </tr>
    <% } %>
  </tbody>
</table>

<h3>Verhuurgeschiedenis</h3>
<table class="table-800 table table-bordered">
  <thead>
    <tr>
      <th>Klant</th>
      <th>Verhuurd op</th>
      <th>Teruggebracht op</th>
      <th>Prijs</th>
    </tr>
  </thead>
  <tbody>
    <% if (rentalHistory && rentalHistory.length > 0) { %>
      <% rentalHistory.forEach(function(rental) { %>
        <tr>
          <td><%= rental.customer_name %></td>
          <td><%= rental.rental_date %></td>
          <td><%= rental.return_date %></td>
          <td>€ <%= rental.amount %></td>
        </tr>
      <% }); %>
    <% } else { %>
      <tr>
        <td colspan="4" class="text-center">Geen verhuurgeschiedenis</td>
      </tr>
    <% } %>
  </tbody>
</table>
</section>