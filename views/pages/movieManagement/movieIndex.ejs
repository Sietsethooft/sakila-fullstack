<section class="client-card">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    window.clientSuccess = '<%= success ? success : '' %>';
    </script>
  <script src="/javascripts/movieScripts/movieAlerts.js"></script>

  <h2 class="h2-head">Movie-management</h2>
  <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
    <form class="search-form-group" method="GET" action="">
        <div class="input-group">
            <input type="search" class="form-control searchbar" id="datatable-search-input" name="search" placeholder="Filmtitel">
            <button class="btn btn-search" type="submit">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 16 16">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85zm-5.242 1.398a5.5 5.5 0 1 1 0-11 5.5 5.5 0 0 1 0 11z"/>
            </svg>
            </button>
        </div>
        <select class="form-select no-focus" name="language" style="width:120px;">
            <option value="">Language</option>
            <% languages.forEach(function(language) { %>
              <option value="<%= language.name %>"><%= language.name %></option>
            <% }); %>
        </select>
        <select class="form-select no-focus" name="category" style="width:120px;">
            <option value="">Category</option>
            <% categories.forEach(function(category) { %>
              <option value="<%= category.name %>"><%= category.name %></option>
            <% }); %>
        </select>
        <select class="form-select no-focus" name="rating" style="width:120px;">
            <option value="">Rating</option>
            <% ratings.forEach(function(ratingObj) { %>
              <option value="<%= ratingObj.rating %>"><%= ratingObj.rating %></option>
            <% }); %>
        </select>
    </form>
    <button class="btn btn-primary mt-2 mt-md-0" type="button" id="add-movie-btn">
      <i class="fas fa-film me-2"></i> Create Movie
    </button>
  </div>
  <div class="row g-4">
    <% if (movies.length === 0) { %>
      <div class="col-12">
        <div class="alert alert-info text-center py-5">
          <i class="fas fa-film fa-2x mb-3"></i>
          <h4>No movie found</h4>
          <p>Try a different search term or filter.</p>
        </div>
      </div>
    <% } else { %>
      <% movies.forEach(function(movie, idx) { %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card movie-block h-100 shadow-sm" style="cursor:pointer;" onclick="window.location.href='/movieManagement/<%= movie.film_id %>'">
            <img src="https://picsum.photos/320/180?random=<%= idx %>" class="card-img-top" alt="<%= movie.title %>">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= movie.title %></h5>
              <p class="card-text">
                <%= movie.description.length > 100 ? movie.description.substring(0, 100) + "..." : movie.description %>
              </p>
              <div class="mt-auto">
                <div class="mb-2">
                  <span class="badge bg-secondary">
                    <%= movie.category_name %>
                  </span>
                  <span class="badge bg-secondary ms-1"><%= movie.language_name %></span>
                </div>
                <div class="d-flex justify-content-between small text-muted">
                  <span><%= movie.release_year %></span>
                  <span>Rating: <%= movie.rating %></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    <% } %>
  </div>
  <script src="/javascripts/movieScripts/movieIndex.js"></script>
</section>